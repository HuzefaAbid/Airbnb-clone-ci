<% layout("/layouts/boilerplate.ejs") %>

<body>
  <div class="row mt-3">
    <h3 class="col-8 offset-3">Listing Details:</h3>
  </div>
  <div class="card col-6 offset-3">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <p class="card-text"><b> <%= listing.title %> </b></p>
      <p><%= listing.description %></p>
      <p><%= listing.price.toLocaleString("en-PK") %> Rs</p>
      <p><%= listing.location %></p>
      <p><%= listing.country %></p>
    </div>
  </div>
  <div class="row">
    <div
      class="col-6 offset-3 d-flex justify-content-start align-items-center"
      style="gap: 0.25rem; padding-left: 0"
    >
      <a
        href="/listings/<%= listing._id %>/edit"
        class="btn btn-dark mb-3 edit-btn"
        >Edit</a
      >
      <form
        action="/listings/<%= listing._id %>?_method=DELETE"
        method="post"
        style="margin: 0"
      >
        <button class="btn btn-dark mb-3">Delete</button>
      </form>
    </div>
  </div>
</body>
